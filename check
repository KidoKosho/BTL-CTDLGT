#include <iostream>
#include <cstdlib>

using namespace std;

int main() {
    srand(time(0)); // Khởi tạo seed cho rand
    int startapp = 0;
    
    do {
        int random = (rand() % 20 + 20) % 20 + 1;
        cout << random;
        startapp += random;
        if (startapp >= 100) startapp = 100;
        cout << "Loadingg................................" << startapp << "%" << endl;

        // Thêm thời gian chờ
        this_thread::sleep_for(chrono::milliseconds(500)); // Chờ 0.5 giây
    } while (startapp < 100);

    return 0;
}
